<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="Since you have decided to donate your money, please insert your annual salary (no commas) and the percentage of you would donate per month (no percents)."
        android:textSize="24sp" />

    <EditText
        android:id="@+id/incomething"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Monthly Income"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />
    <EditText
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Percent"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/incomething"
        android:layout_alignStart="@+id/incomething" />

    <Button
        android:id="@+id/fromTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fromIncome"
        android:text="Continue"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/percent"
        android:layout_centerHorizontal="true" />
</RelativeLayout>